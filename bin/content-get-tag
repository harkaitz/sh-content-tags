##:
#h: Usage: $0 [-c][-t TAG] FILES...
##:
. content-id
content_get_tag() {
    local OPTIND optopt a='' b='' ft='' t='' fmt='%-20s %s\n' tag=''
    while getopts "ct:" optopt; do
        case $optopt in
            c)  fmt='%s,%s\n';;
            t)  tag="${OPTARG}";;
            \?) return 1;;
        esac
    done
    shift $(( $OPTIND - 1 ))
    if test ! -e "${CONTENT_GDBM}"; then
        ft='unknown'
    fi
    content_id -f "$@" | while read a b; do
        t="${ft:-`gdbmtool "${CONTENT_GDBM}" fetch "${a}" 2>/dev/null`}"
        if test ! -n "${tag}"; then
            printf "${fmt}" "${t:-unknown}" "${b}"
        elif test @"${tag}" = @"${t:-unknown}"; then
            printf '%s\n' "${b}"
        fi
    done
    
}
SCRNAME="`basename "$0"`"
CONTENT_GDBM="${CONTENT_GDBM:-${HOME}/.content.gdbm}"
if test @"${SCRNAME}" = @"content-get-tag";then
    case "${1}" in
        -h|--help)
            sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|${SCRNAME}|g"
            echo ""
            sed -n 's/^ *#l: \{0,2\}//p' "$0"
            ;;
        *)
            content_get_tag "$@"
            ;;
    esac
fi
